@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Import Bootstrap & Custom Styles -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        background: linear-gradient(to right, #ff00ff, #00ffff);
        color: white;
        font-family: 'Press Start 2P', cursive;
        text-align: center;
    }

    .card {
        background: rgba(0, 0, 0, 0.8);
        border: 2px solid #ff00ff;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 0 8px #00ffff;
        width: 400px;
        margin: auto;
    }

    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: #ff00ff;
            text-decoration: underline;
        }

    .container {
        margin-top: 30px;
    }

    .card h2 {
        font-size: 18px;
        color: #00ffff;
        text-shadow: 1px 1px 3px #ff00ff;
    }

    h4 {
        font-size: 14px;
    }

    p {
        font-size: 12px;
    }
</style>

<div class="container">
    <div class="card shadow-lg p-3">
        <h2 class="text-center mb-2">Privacy Policy</h2>
        <p class="text-white">Your privacy is important to us. This page explains how we collect, use, and protect your personal information.</p>
        <h4 class="text-white">1. Information We Collect</h4>
        <p class="text-white">We collect personal information when you sign up, such as your name, email, and password.</p>
        <h4 class="text-white">2. How We Use Your Information</h4>
        <p class="text-white">Your information is used to manage your account, improve our services, and provide support.</p>
        <h4 class="text-white">3. Data Protection</h4>
        <p class="text-white">We take strong security measures to protect your personal data from unauthorized access.</p>
        <h4 class="text-white">4. Contact Us</h4>
        <p class="text-white">If you have any questions about our privacy policy, please <a href="#">contact us</a>.</p>
    </div>
</div>
