@page
@model IndexModel
@{
    ViewData["Title"] = "Sign Up";
}

<!-- Import Bootstrap & Custom Styles -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        background: linear-gradient(to right, #ff00ff, #00ffff);
        color: white;
        font-family: 'Press Start 2P', cursive;
        text-align: center;
    }

    .card {
        background: rgba(0, 0, 0, 0.8);
        border: 2px solid #ff00ff;
        border-radius: 8px;
        padding: 12px;
        box-shadow: 0 0 8px #00ffff;
        width: 300px;
        margin: auto;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid #ff00ff;
        color: white;
        font-size: 12px;
        padding: 6px;
    }

        .form-control::placeholder {
            color: white;
        }

    .btn-primary {
        background: #00ffff;
        border: 2px solid #ff00ff;
        color: white;
        font-weight: bold;
        font-size: 14px;
        padding: 8px;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #ff00ff;
            border: 2px solid #00ffff;
            color: white;
        }

    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: #ff00ff;
            text-decoration: underline;
        }

    .container {
        margin-top: 40px;
    }

    .card h2 {
        font-size: 18px;
        color: #00ffff;
        text-shadow: 1px 1px 3px #ff00ff;
    }

    h1 {
        font-size: 24px;
    }

    .lead {
        font-size: 14px;
    }

    label {
        font-size: 12px;
    }
</style>

<div class="container">
    <h1 class="fw-bold">Join the Retro Wave</h1>
    <p class="lead">Sign up to enter the neon world!</p>

    <div class="card shadow-lg">
        <h2 class="text-center mb-2">Create an Account</h2>
        <form method="post">
            <div class="mb-2">
                <label for="name" class="form-label text-white">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" required placeholder="Enter your name">
            </div>
            <div class="mb-2">
                <label for="email" class="form-label text-white">Email</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
            </div>
            <div class="mb-2">
                <label for="password" class="form-label text-white">Password</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-2">Sign Up</button>
        </form>
    </div>
</div>
